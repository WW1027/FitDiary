<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange"
    tools:context=".NewRecordatorioActivity">

    <TextView
        android:id="@+id/newRecordatorioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/recursive_medium"
        android:gravity="center"
        android:text="New Event"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/newEventHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/newRecordatorioText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/newEventTableLayout"
        android:layout_width="412dp"
        android:layout_height="205dp"
        android:layout_marginTop="30dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newEventHorizontalLine"
        app:layout_constraintVertical_bias="0.002">

        <TableRow>

            <TextView
                android:id="@+id/newEventDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40sp"
                android:fontFamily="@font/recursive_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Date:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newEventDateTextRectangle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/recursive_medium"
                android:gravity="center"
                android:hint="  dd/mm/yyyy"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/newEventDateImageSelector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:gravity="center"
                app:srcCompat="@drawable/date" />


        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="10sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/newEventSportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40sp"
                android:fontFamily="@font/recursive_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sport:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newEventSportTextRectangle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/recursive_medium"
                android:gravity="center"
                android:hint="  Yoga"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat,TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/newEventSportSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="45dp"
                android:contentDescription="@string/app_name"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="10sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/newEventDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15sp"
                android:fontFamily="@font/recursive_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Duration:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newEventDurationTextRectangle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/recursive_medium"
                android:gravity="center"
                android:hint="  30"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat,TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/newEventDurationSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:contentDescription="@string/fab_transformation_sheet_behavior"
                android:text="hello"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textSize="10sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/newEventCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="@color/orange"
        android:fontFamily="@font/recursive_medium"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newEventAcceptButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/newEventAcceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="@color/black"
        android:fontFamily="@font/recursive_medium"
        android:text="ACCEPT"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newEventCancelButton"
        app:layout_constraintTop_toTopOf="@+id/newEventCancelButton"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>